# ===========================================
# FYPGlow Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# ===========================================

# Flask environment (development/production)
FLASK_ENV=development

# Database credentials
# IMPORTANT: Use strong, unique passwords in production!
POSTGRES_USER=fypfixer
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=fypfixer

# Redis password (leave empty for no password in dev)
# IMPORTANT: Always use password in production!
REDIS_PASSWORD=

# Security keys - MUST be unique and secret!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=GENERATE_NEW_SECRET_KEY_HERE
SECRET_KEY=GENERATE_NEW_SECRET_KEY_HERE

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# AI Provider settings
AI_PROVIDER=local
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3
