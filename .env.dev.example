# FYPGlow Development Environment Template
# Copy this file to .env.dev and fill in your values
# DO NOT commit .env.dev with real secrets!

# FLASK
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# DATABASE
POSTGRES_USER=fypglow
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=fypglow
DATABASE_URL=postgresql://fypglow:your-password-here@db:5432/fypglow

# REDIS
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password-here

# TIKTOK (get from TikTok Developer Portal)
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:5173/auth/tiktok/callback

# AI PROVIDER
# Options: static, anthropic
# Use "static" for development without API calls
AI_PROVIDER=static
ANTHROPIC_API_KEY=your-anthropic-key-if-needed

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
